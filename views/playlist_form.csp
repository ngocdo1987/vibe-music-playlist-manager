<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%c++$$<<(@@.get<std::string>("mode")=="create"?"Create":"Edit");%> Playlist</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/admin.css" rel="stylesheet">
    <style>
        .song-item {
            cursor: move;
            transition: background-color 0.2s;
        }
        .song-item:hover {
            background-color: rgba(0,0,0,0.05);
        }
        .song-item.dragging {
            opacity: 0.5;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin/dashboard">Music Playlist Manager</a>
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-light me-2" id="themeToggle">
                    <span id="themeIcon">ðŸŒ™</span>
                </button>
                <a href="/admin/logout" class="btn btn-outline-light">Logout</a>
            </div>
        </div>
    </nav>
    
    <div class="container mt-4">
        <h2><%c++$$<<(@@.get<std::string>("mode")=="create"?"Create New":"Edit");%> Playlist</h2>
        
        <%c++
            auto mode = @@.get<std::string>("mode");
            auto playlistStr = @@.get<std::string>("playlist", "{}");
            auto songsStr = @@.get<std::string>("songs", "[]");
            
            Json::Value playlist;
            Json::Value songs;
            Json::Reader reader;
            reader.parse(playlistStr, playlist);
            reader.parse(songsStr, songs);
            
            std::string action = mode == "create" ? "/admin/playlist" : "/admin/playlist/" + std::to_string(playlist["id"].asInt());
        %>
        
        <form method="POST" action="<%c++$$<<action;%>" id="playlistForm">
            <div class="mb-3">
                <label for="name" class="form-label">Playlist Name</label>
                <input type="text" class="form-control" id="name" name="name" 
                       value="<%c++$$<<playlist["name"].asString();%>" required>
            </div>
            
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" name="description" 
                          rows="3"><%c++$$<<playlist["description"].asString();%></textarea>
            </div>
            
            <div class="mb-3">
                <label class="form-label">Songs</label>
                <div class="mb-2">
                    <button type="button" class="btn btn-primary" id="uploadBtn">
                        Upload MP3 Files
                    </button>
                    <input type="file" id="fileInput" accept=".mp3" multiple style="display:none">
                </div>
                
                <div id="uploadProgress" class="mb-2" style="display:none">
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 0%"></div>
                    </div>
                </div>
                
                <div id="songsList" class="list-group">
                    <%c++
                        for (const auto& song : songs) {
                    %>
                    <div class="list-group-item song-item" draggable="true" 
                         data-song-id="<%c++$$<<song["id"].asInt();%>">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong><%c++$$<<song["originalName"].asString();%></strong>
                                <small class="text-muted d-block">
                                    <%c++$$<<(song["fileSize"].asInt()/1024);%> KB
                                </small>
                            </div>
                            <button type="button" class="btn btn-sm btn-danger remove-song" 
                                    data-song-id="<%c++$$<<song["id"].asInt();%>">Remove</button>
                        </div>
                    </div>
                    <%c++
                        }
                    %>
                </div>
            </div>
            
            <input type="hidden" name="song_ids" id="songIdsInput">
            
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">Save Playlist</button>
                <a href="/admin/dashboard" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/admin.js"></script>
    <script>
        // Upload functionality
        const uploadBtn = document.getElementById('uploadBtn');
        const fileInput = document.getElementById('fileInput');
        const songsList = document.getElementById('songsList');
        const uploadProgress = document.getElementById('uploadProgress');
        const progressBar = uploadProgress.querySelector('.progress-bar');
        
        uploadBtn.addEventListener('click', () => fileInput.click());
        
        fileInput.addEventListener('change', async (e) => {
            const files = Array.from(e.target.files);
            if (files.length === 0) return;
            
            uploadProgress.style.display = 'block';
            
            for (let i = 0; i < files.length; i++) {
                const file = files[i];
                const formData = new FormData();
                formData.append('file', file);
                
                try {
                    const response = await fetch('/api/upload-song', {
                        method: 'POST',
                        body: formData
                    });
                    
                    const data = await response.json();
                    
                    if (data.success) {
                        addSongToList(data);
                    } else {
                        alert('Error uploading ' + file.name + ': ' + data.error);
                    }
                } catch (error) {
                    alert('Error uploading ' + file.name);
                }
                
                progressBar.style.width = ((i + 1) / files.length * 100) + '%';
            }
            
            uploadProgress.style.display = 'none';
            progressBar.style.width = '0%';
            fileInput.value = '';
        });
        
        function addSongToList(song) {
            const item = document.createElement('div');
            item.className = 'list-group-item song-item';
            item.draggable = true;
            item.setAttribute('data-song-id', song.id);
            item.innerHTML = `
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <strong>${song.originalName}</strong>
                        <small class="text-muted d-block">${Math.round(song.fileSize/1024)} KB</small>
                    </div>
                    <button type="button" class="btn btn-sm btn-danger remove-song" 
                            data-song-id="${song.id}">Remove</button>
                </div>
            `;
            songsList.appendChild(item);
            setupDragAndDrop();
        }
        
        // Drag and drop
        let draggedElement = null;
        
        function setupDragAndDrop() {
            const items = document.querySelectorAll('.song-item');
            
            items.forEach(item => {
                item.addEventListener('dragstart', function() {
                    draggedElement = this;
                    this.classList.add('dragging');
                });
                
                item.addEventListener('dragend', function() {
                    this.classList.remove('dragging');
                });
                
                item.addEventListener('dragover', function(e) {
                    e.preventDefault();
                    const afterElement = getDragAfterElement(songsList, e.clientY);
                    if (afterElement == null) {
                        songsList.appendChild(draggedElement);
                    } else {
                        songsList.insertBefore(draggedElement, afterElement);
                    }
                });
            });
            
            // Remove song buttons
            document.querySelectorAll('.remove-song').forEach(btn => {
                btn.addEventListener('click', function() {
                    this.closest('.song-item').remove();
                });
            });
        }
        
        function getDragAfterElement(container, y) {
            const draggableElements = [...container.querySelectorAll('.song-item:not(.dragging)')];
            
            return draggableElements.reduce((closest, child) => {
                const box = child.getBoundingClientRect();
                const offset = y - box.top - box.height / 2;
                
                if (offset < 0 && offset > closest.offset) {
                    return { offset: offset, element: child };
                } else {
                    return closest;
                }
            }, { offset: Number.NEGATIVE_INFINITY }).element;
        }
        
        setupDragAndDrop();
        
        // Form submission
        document.getElementById('playlistForm').addEventListener('submit', function(e) {
            const songItems = document.querySelectorAll('.song-item');
            const songIds = Array.from(songItems).map(item => item.getAttribute('data-song-id'));
            document.getElementById('songIdsInput').value = JSON.stringify(songIds);
        });
    </script>
</body>
</html>